{
  "name": "telegram-mini-app-typescript",
  "version": "1.0.0",
  "description": "A TypeScript project for a Telegram Mini App",
  "main": "dist/src/script.js",
  "type": "module",
  "scripts": {
    "build": "npm run replace-env && npx tsc",
    "replace-env": "replace-in-file --configFile=config/replace-env.config.js",
    "dev:build": "npx tsc -w",
    "dev:run": "nodemon dist/index.js",
    "lint": "npx eslint . --ext .ts",
    "format": "npx prettier --write .",
    "heroku-postbuild": "npm run build"
  },
  "keywords": [
    "telegram",
    "mini-app",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/node": "^20.12.12",
    "@types/telegram-web-app": "^7.2.1",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "replace-in-file": "^8.3.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "express": "^4.18.2",
    "serve": "^14.2.3"
  }
}
